
@{
    ViewBag.Title = "cnfFrmSolicitud";
}

<h2>Comite de Cambios</h2>

<div class="row">
    <div class="col-md-12">
        <div class="block-web">
            <div class="header">
                <div class="actions">
                    <a class="minimize" href="#"><i class="fa fa-chevron-down"></i></a>
                </div>
            </div>
            <div class="porlets-content">
                <div class="adv-table editable-table ">
                    <div class="margin-top-10"></div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="dataTables_length" id="editable-sample_length">
                            </div>
                        </div><div class="col-lg-12"><label>Buscar: <input class="txtBuscar form-control" aria-controls="editable-sample" data-table="order-table" type="search" placeholder="Buscar por Nombre..." /></label></div>
                    </div>
                    <table class="table table-striped table-hover table-bordered order-table" id="editable-sample">
                        <thead>
                            <tr>
                                <th>Codigo</th>
                                <th>Apellido y Nombre</th>
                                <th>Cargo</th>                             
                                <th>Accion</th>
                            </tr>
                        </thead>
                        <tbody>
                            @try
                                {
                                    foreach (var USUjDatos in ViewBag.USUpProyecto)
                                    {
                                        <tr class="">
                                            <td>@USUjDatos.USUcodigo</td>
                                            <td>@USUjDatos.USUnombre @USUjDatos.USUapellido</td>
                                            <td>@USUjDatos.USUnivel</td>                                                                                     
                                            <td><input type="checkbox" checked class="form-control" name="LstrRegistro" value="Seleccionar"/></td>
                                        </tr>
                                    }
                                }
                                catch
                                {

                                }
                        </tbody>
                    </table>
                </div>

            </div><!--/porlets-content-->
        </div><!--/block-web-->
    </div><!--/col-md-12-->
</div><!--/row-->
<div class="text-right">
    <button type="submit" class="btn btn-success">Generar Comite de Cambios</button>
</div>