                                                                <td>@LobjRegistro.MNTnombre</td>
                                                                <td>@LobjRegistro.MNTnomenclatura</td>
                                                                <td>@LobjRegistro.MEFnombre</td>
                                                                <td>
                                                                    <input type="checkbox" class="form-control" name="MNTcodigo_Relacion" value="@LobjRegistro.MNTcodigo" />
