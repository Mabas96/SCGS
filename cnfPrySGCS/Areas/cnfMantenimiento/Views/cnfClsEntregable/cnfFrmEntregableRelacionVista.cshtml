                                                    {
                                                        LobjRelacionLista.Add(LobjLista);
                                                    }
                                                }

                                                foreach (var LobjRegistro in GobjListarEntregable)
                                                {
                                                    foreach (var LobjRegistroRelacion in LobjRelacionLista)
                                                    {
